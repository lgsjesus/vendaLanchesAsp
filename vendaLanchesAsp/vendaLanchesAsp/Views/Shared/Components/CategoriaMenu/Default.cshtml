<li class="dropdown">
    <a asp-controller="Lanche" asp-action="List"
       class="dropdown-toggle align-baseline" data-toggle="dropdown">
        Lanches<b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
        @foreach (var categoria in Model)
        {
            <li class="dropdown-item-text">
                <a asp-controller="Lanches" asp-action="List"
                   asp-route-categoria="@categoria.CategoriaNome">@categoria.CategoriaNome</a>
            </li>
        }
        <li class="divider"></li>
        <li class="dropdown-item-text">
            <a asp-controller="Lanches" asp-action="List" asp-route-categoria="">Ver todos os Lanches</a>
        </li>
    </ul>
</li>