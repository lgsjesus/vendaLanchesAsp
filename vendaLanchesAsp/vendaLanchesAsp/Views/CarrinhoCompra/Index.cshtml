@model CarrinhoCompraViewModel

<div class="container-fluid">
    <h3>Detalhes do Pedido</h3>
    <table class="table table-striped">
        <tr>
            <th scope="col">Lanche</th>
            <th scope="col">Quantidade</th>
            <th scope="col">Preço</th>
            <th scope="col">Excluir</th>
        </tr>
        <tbody>

            @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItens)
            {
                <tr>
                    <th scope="row">@item.Lanche.Nome</th>
                    <td>@item.Quantidade</td>
                    <td>@item.Lanche.Preco</td>
                    <td><a class="fa fa-2x fa-remove" asp-action="RemoverItemDoCarrinho" asp-controller="CarrinhoCompra" asp-route-lancheId="@item.Lanche.LancheId" /> </td>
                </tr>
            }
            <tr>
                <td class="text-right font-weight-bold" colspan="3"> <strong>Total do Pedido:</strong></td>
                <td class="text-left font-weight-bold"><strong> @Model.TotalCarrinhoCompra.ToString("c")</strong></td>
            </tr>
        </tbody>
    </table>
    <div class="text-right">
        <div class="btn-group ">
            <a class="btn btn-success" asp-controller="Pedido" asp-action="Checkout">Encerrar Pedido</a>
            <a class="btn-group">
                <a class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Adicionar mais lanches<span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li><a asp-controller="Lanches" asp-action="List" asp-route-categoria="Normal">Normal</a></li>
                    <li><a asp-controller="Lanches" asp-action="List" asp-route-categoria="Natural">Natural</a></li>
                </ul>
            </a>
        </div>
    </div>
</div>